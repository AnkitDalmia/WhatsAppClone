<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_details_profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:src="@drawable/ic_user"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_details_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:maxWidth="150dp"
        android:singleLine="true"
        android:text="UserName"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_details_profile_pic"
        app:layout_constraintStart_toEndOf="@+id/activity_details_profile_pic"
        app:layout_constraintTop_toTopOf="@+id/activity_details_profile_pic"
        app:layout_constraintVertical_bias="0.20" />

    <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
        android:id="@+id/sample_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxWidth="150dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_details_profile_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_details_user_name"
        app:layout_constraintTop_toTopOf="@+id/activity_details_profile_pic"
        app:layout_constraintVertical_bias="0.70" />

    <TextView
        android:id="@+id/sample_last_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_details_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/activity_details_user_name"
        app:layout_constraintTop_toTopOf="@+id/activity_details_user_name" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightGrey1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sample_last_message_time"
        app:layout_constraintStart_toStartOf="@+id/activity_details_user_name"
        app:layout_constraintTop_toBottomOf="@+id/activity_details_profile_pic" />


</androidx.constraintlayout.widget.ConstraintLayout>